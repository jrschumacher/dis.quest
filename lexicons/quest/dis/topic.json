{
  "lexicon": 1,
  "id": "quest.dis.topic",
  "needsCbor": true,
  "needsType": true,
  "defs": {
    "main": {
      "type": "record",
      "key": "tid",
      "record": {
        "type": "object",
        "required": [
          "title",
          "createdBy",
          "createdAt"
        ],
        "properties": {
          "title": {
            "type": "string",
            "maxLength": 300
          },
          "summary": {
            "type": "string",
            "maxLength": 3000
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string",
              "maxLength": 50
            },
            "maxItems": 10
          },
          "createdBy": {
            "type": "string",
            "format": "did"
          },
          "createdAt": {
            "type": "string",
            "format": "datetime"
          },
          "selectedAnswer": {
            "type": "string",
            "format": "at-uri"
          }
        }
      }
    }
  }
}